{% macro paragraph(text=false, small=false, lead=false, limitWidth=false, clearfix=true) %}
  {% if limitWidth %}<div class="text {{ 'u-clearfix' if clearfix }}">{% endif %}
  <p class="govuk-body {{ 'lede' if lead }}{{ 'font-xsmall' if small }} ">
    {{ text }}
  </p>
  {% if limitWidth %}</div>{% endif %}
{% endmacro %}
