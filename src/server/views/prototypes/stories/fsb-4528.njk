{% extends 'layouts/bulma-ufs.layout.njk' %}
{% set navType = 'NOTadmin' %}
{% set pageTitle = 'Applicants' + GLOBAL_TAG_TITLE_SUFFIX %}
{% set backLinkContents =  [{url:'#', text:'Back to account settings'}] %}
{% set isAdminUser = false %}

{% block content %}

    {% call components.bulmaRow() %}

        {% call components.bulmaColumnAny(size='column is-full is-9-desktop is-9-widescreen') %}

            {{ components.captionHeading(text='Change your name', caption='Account settings') }}

        {%- endcall %}

    {%- endcall %}

    <section class="section" id="mainContent">

        {% call components.bulmaRow() %}

            {% call components.bulmaColumnAny(size='column is-8') %}

                <fieldset class="govuk-fieldset">
                    <legend class="govuk-visually-hidden">Enter new first and last names</legend>

                    <div class="govuk-form-group">
                        <label class="govuk-label govuk-label--s" for="firstName">First name</label>
                        <input class="govuk-input govuk-input--width-20" id="firstName" name="firstName" type="text">
                    </div>

                    <div class="govuk-form-group">
                        <label class="govuk-label govuk-label--s" for="lasstName">Last name</label>
                        <input class="govuk-input govuk-input--width-20" id="lasstName" name="lasstName" type="text">
                    </div>

                </fieldset>

            {%- endcall %}

        {%- endcall %}

    </section>

    <section class="section" id="finalForm">

        {% call components.form(action='#', method='POST', name='submitApplication') %}

            {% call components.bulmaRow() %}

                {% call components.bulmaColumnAny(size='is-two-thirds') %}

                    {{ components.button(text='Change name', extraClass="application-controls__submit", name='saveAndComplete')}}

                    {#{{ components.link(text='Cancel and return to account settings', url='#', extraClass="application-controls__cancel")}} #}

                    <a href="#" class="govuk-link application-controls__cancel">Cancel and return to account settings</a>

                {%- endcall %}

            {%- endcall %}

        {%- endcall %}

    </section>

    {% include '../../layouts/partials/user-contact.njk' %}

{% endblock %}

{% block bodyScripts %}
    {#<script>
    </script>#}
{% endblock %}
