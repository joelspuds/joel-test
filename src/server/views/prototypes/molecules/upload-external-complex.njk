{% extends 'layouts/bulma-ufs.layout.njk' %}
{% set navType = '_admin' %}
{% set isAdminUser = false %}
{%  set loggedOut = false %}
{% set backLinkContents =  [{url:'/prototypes/molecules', text:'Back to molecules'}] %}

{% set newHeader = true %}

{% set pageTitle = 'File upload; external, complex' + GLOBAL_TAG_TITLE_SUFFIX %}

{% block content %}

    <style>
        .tox-statusbar__wordcount, .tox-statusbar__branding { display: none!important}
    </style>

    {% call components.bulmaRow() %}
        {% call components.bulmaColumnAny(size='is-two-thirds u-space-t30') %}
            {{ components.captionHeading(text='Finance documents', caption='Title of application') }}
        {%- endcall %}
    {%- endcall %}

    {% call components.form(action='#', method='POST',name='uploadFileAdminSimple') %}

        {% call components.bulmaRow() %}

            {% call components.bulmaColumnAny(size='column  is-full is-9-desktop is-9-widescreen', customID='mainContent') %}
                <div class="govuk-form-group">
                    <label class="govuk-label govuk-label--s" for="textarea1">Write your content here</label>
                    <span id="more-detail-hint" class="govuk-hint ">Use this text area to give a brief description of the files your are uploading and any further details you might think are relevant or important.</span>

                    <textarea class="govuk-textarea govuk-js-character-count" name="textarea1" id="textarea1" rows="18"></textarea>
                    <p class="govuk-body u-space-t20"><span id="wordCount" class="govuk-hint govuk-character-count__message govuk-visually-hidden" aria-live="polite">You have 250 words remaining</span></p>
                </div>

            {%- endcall %}

        {%- endcall %}

        {% call components.bulmaRow(extraClass='u-space-t30') %}

            {% call components.bulmaColumnAny(size='column  is-full is-9-desktop is-9-widescreen', customID='mainContent') %}

                {{ components.captionHeading(text='File upload', tag='h2', size='m') }}

                <details class="govuk-details u-space-b10 " data-module="govuk-details">
                    <summary class="govuk-details__summary">
                        <span class="govuk-details__summary-text">Guidance for file upload</span>
                    </summary>
                    <div class="govuk-details__text">
                        <p class="govuk-body">You must upload a spreadsheet containing all the financial details for your project. Include direct and indirect costs and projections for all the roles, equipment, and support you require. You may upload up to three documents.</p>

                        {{ components.captionHeading(text='Accepted document types', tag='h3', size='s') }}
                        <ul class="govuk-list govuk-list--bullet">
                            <li>PDF (.pdf)</li>
                            <li>Text document (.doc, .docx, .odt, .words)</li>
                            <li>Spreadsheet (.xls, .xlsx, .ods or .numbers)</li>
                        </ul>

                        <p class="govuk-body">Each document must be less than 8MB</p>

                    </div>
                </details>

            {%- endcall %}

        {%- endcall %}

        {% call components.bulmaRow(extraClass='') %}

            {% call components.bulmaColumnAny(size='column is-full is-9-desktop is-9-widescreen', customID='mainContent', extraClass='u-space-b45') %}
                <noscript>
                    <div class="files">
                        <div class="files__item">
                            <div class="govuk-form-group u-space-b0">
                                <label class="govuk-label" for="file1">Upload file 1</label>
                                <input class="govuk-file-upload" id="file1" name="file1" type="file">
                            </div>
                        </div>
                        <div class="files__item">
                            <div class="govuk-form-group u-space-b0">
                                <label class="govuk-label" for="file1">Upload file 2</label>
                                <input class="govuk-file-upload" id="file2" name="file2" type="file">
                            </div>
                        </div>
                        <div class="files__item">
                            <div class="govuk-form-group u-space-b0">
                                <label class="govuk-label" for="file3">Upload file 3</label>
                                <input class="govuk-file-upload" id="file3" name="file3" type="file">
                            </div>
                        </div>
                    </div>
                </noscript>
                <div class="js-only--block">
                    <div class="govuk-inset-text">
                        You can upload two more files.
                    </div>

                    <div class="files">
                        <div class="files__item files__item--drag">
                            <div class="govuk-form-group u-space-b0">
                                <label for="fileUpload2" class="govuk-visually-hidden">Upload a file</label>
                                <input type="file" id="fileUpload3" class="govuk-visually-hidden" multiple />
                                <button type="button" class="govuk-button govuk-button--secondary u-space-b0" name="" id="jsUploadButton">Upload a file</button>
                                <span class="meta govuk-!-display-inline-block u-space-t10 u-space-x20" id="spanFilePath"></span>
                            </div>
                        </div>



                        <div class="files__item" id="uploading1">
                            <div class="files__name">
                                dr_ivor_phylle_CV.PDF
                                <strong class="govuk-tag govuk-tag--red">
                                    uploading
                                </strong>
                            </div>
                            <div class="files__meta">
                                <span class="files__size">578KB</span>
                                <span class="files__action">
                            <a href="#" class="govuk-link">Cancel <span class="govuk-visually-hidden"> this upload</span></a>
                        </span>
                            </div>
                            <div class="files__activity"><span class="govuk-visually-hidden">Your file is uploading</span></div>
                        </div>

                        <div class="files__item" id="uploading2">
                            <div class="files__name">
                                dr_appi_meall_CV.PDF
                                <strong class="govuk-tag govuk-tag--yellow">
                                    pending
                                </strong>
                            </div>
                            <div class="files__meta">
                                <span class="files__size">4.18MB</span>
                                <span class="files__action">
                                <a href="#" class="govuk-link">Cancel <span class="govuk-visually-hidden"> this upload and scan</span></a>
                            </span>
                            </div>
                        </div>

                        <div class="files__item">
                            <div class="files__name">
                                prof_ellen_ripley_CV.PDF
                            </div>
                            <div class="files__meta">
                                <span class="files__size">7.9MB</span>
                                <span class="files__action">
                                <a href="#" class="govuk-link">Remove <span class="govuk-visually-hidden"> this file</span></a>
                            </span>
                            </div>
                        </div>


                    </div>
                </div>
            {%- endcall %}
        {%- endcall %}

        {% call components.bulmaRow() %}
            {% call components.bulmaColumnAny(size='is-full') %}
                <div class="application-item">
                    <div class="application-item__contents application-item__contents--mac">
                        <fieldset class="govuk-fieldset" aria-describedby="markAsComplete">
                            <legend class="govuk-fieldset__legend govuk-visually-hidden">
                                <h3 class="govuk-fieldset__heading" id="">Mark as complete</h3>
                            </legend>
                            <div class="govuk-checkboxes">
                                <div class="govuk-checkboxes__item">
                                    <input class="govuk-checkboxes__input" id="markAsComplete" name="isComplete" type="checkbox">
                                    <label class="govuk-label govuk-checkboxes__label" for="markAsComplete">Mark as complete</label>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>
            {%- endcall %}
        {%- endcall %}

        {% call components.bulmaRow() %}
            {% call components.bulmaColumnAny(size='is-full') %}
                <div class="application-controls govuk-clearfix">
                    {{ components.button(text='Save and return', extraClass="application-controls__submit")}}
                    {#<span class="sub-button">
                        {{ components.link(text='Cancel', url='/prototypes/application-v2/')}}
                    </span>#}
                </div>
            {%- endcall %}
        {%- endcall %}

    {%- endcall %}

    {% include '../../layouts/partials/user-contact.njk' %}

{% endblock %}
