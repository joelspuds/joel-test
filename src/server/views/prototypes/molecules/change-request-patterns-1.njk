        {% call components.bulmaRow() %}

            {% call components.bulmaColumnAny(size='is-9') %}

                {{ components.captionHeading(text='Boxed content', tag='h2', size='m') }}

                <div class="boxed-content">
                    <div class="govuk-form-group">
                        <fieldset class="govuk-fieldset">
                            <h2 class="govuk-fieldset__heading">
                                <legend class="govuk-fieldset__legend govuk-fieldset__legend--s u-space-b20">Respond to request</legend>
                            </h2>
                            <div class="govuk-radios govuk-radios--conditional" data-module="govuk-radios">
                                <div class="govuk-radios__item">
                                    <input class="govuk-radios__input" id="radio1" name="radios" type="radio" value="approve">
                                    <label class="govuk-label govuk-radios__label" for="radio1">Approve request</label>
                                </div>
                                <div class="govuk-radios__item">
                                    <input class="govuk-radios__input" id="radio2" name="radios" type="radio" value="assigno">
                                    <label class="govuk-label govuk-radios__label" for="radio2">Assign for approval</label>
                                </div>
                                <div class="govuk-radios__item">
                                    <input class="govuk-radios__input" id="radio3" name="radios" type="radio" value="reject">
                                    <label class="govuk-label govuk-radios__label" for="radio3">Reject with comments</label>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                    <div class="application-controls govuk-clearfix _u-space-t45">
                        <button type="submit" id="saveTableData" class="govuk-button application-controls__submit u-space-b10">Continue</button>
                    </div>
                </div>
            {%- endcall %}
        {%- endcall %}

        {% call components.bulmaRow() %}
            {% call components.bulmaColumnAny(size='is-9') %}

