{% extends 'layouts/bulma-ufs.layout.njk' %}
{% set navType = 'admin' %}
{% set pageTitle = 'Alerts' + GLOBAL_TAG_TITLE_SUFFIX %}
{% set allCouncils = allCouncils %}
{% set backLinkContents =  [{url:'/prototypes/molecules', text:'Back to molecules'}] %}
{% set isAdminUser = true %}

{% block content %}

    {% call components.bulmaRow() %}

        {% call components.bulmaColumnAny(size='column is-full is-9-desktop is-9-widescreen') %}

            {{ components.captionHeading(text='Notification banners') }}

            <p class="govuk-body">
                Keep up with the cool kidz: <a href="https://design-system.service.gov.uk/components/notification-banner/">GDS notification banner</a>
            </p>

        {%- endcall %}

    {%- endcall %}

    <section class="section" id="main-content">

        {% call components.bulmaRow() %}

            {% call components.bulmaColumnAny(size='column is-8') %}

                {{ components.captionHeading(text='Normal', tag='h2', size='s') }}

                {{ components.notifications(title='Important information', text='This box contains some important information that you should read.', linkText='View application', linkURL='#')  }}

                {{ components.captionHeading(text='No title, and no link', tag='h2', size='s') }}

                {{ components.notifications(text='This is also pretty important.')  }}

                {{ components.captionHeading(text='Success, with secondary text', tag='h2', size='s') }}

                {{ components.notifications(title='Success', type='success', text='Nice work, you\'ve successfully done this thing.', linkText='Check your stuff', linkURL='#', secondaryText='Contact <a class="govuk-notification-banner__link" href="#">example@department.gov.uk</a> if you think there\'s a problem.')  }}


            {%- endcall %}

        {%- endcall %}
    </section>

{% endblock %}

