{% extends 'layouts/bulma-ufs.layout.njk' %}
{% set navType = 'admin' %}
{% set pageTitle = 'Alerts' + GLOBAL_TAG_TITLE_SUFFIX %}
{% set allCouncils = allCouncils %}
{% set backLinkContents =  [{url:'/prototypes/molecules', text:'Back to molecules'}] %}
{% set isAdminUser = true %}

{% block content %}

    {% call components.bulmaRow() %}

        {% call components.bulmaColumnAny(size='column is-full is-9-desktop is-9-widescreen') %}

            {{ components.captionHeading(text='Alerts (or "system messages")') }}

        {%- endcall %}

    {%- endcall %}

    <section class="section" id="main-content">

        {% call components.bulmaRow() %}

            {% call components.bulmaColumnAny(size='column is-8') %}

                {{ components.captionHeading(text='Normal', tag='h2', size='s') }}

                {{ components.alerts(text='This contains some important information')  }}

                {{ components.captionHeading(text='Normal', tag='h2', size='s') }}

                <div class="alerts alerts--link">
                    You can click a link in this one
                    <a href="#" class="govuk-link govuk-!-font-size-16">Edit</a>
                </div>

                <div class="alerts alerts--link">
                    This one contains a really long bit of text so you can see it wrapping all over the shed onto the next line on smaller viewports
                    <a href="#" class="govuk-link govuk-!-font-size-16">Click here</a>
                </div>

                <div class="alerts alerts--danger alerts--link">
                    This one contains a really long bit of text so you can see it wrapping all over the shed onto the next line on smaller viewports

                </div>

                <div class="alerts  alerts--success alerts--link">
                    You have finally done something right with your life choices
                    <a href="#" class="govuk-link govuk-!-font-size-16">Ruin it</a>
                </div>

                <div class="alerts alerts--cross alerts--link">
                    This is definitely a major no-no
                    <a href="#" class="govuk-link govuk-!-font-size-16">Edit this stuff</a>
                </div>

                {{ components.captionHeading(text='Alert with a title', tag='h2', size='m') }}

                {{ components.alerts(text='This contains some important information', title='This is really important') }}

                {{ components.captionHeading(text='Success alert', tag='h2', size='m') }}

                {{ components.alerts(text='You have successfully updated your application', type='success') }}

                {{ components.captionHeading(text='Info alert', tag='h2', size='m') }}

                {{ components.alerts(text='This is a preview of your application', type='info')  }}

                {{ components.captionHeading(text='Danger alert', tag='h2', size='m') }}

                {{ components.alerts(text='There was an error updating your informaton. Try again later. This is actually a really long message to wrap onto multiple lines.', type='danger')  }}

                {{ components.captionHeading(text='Warning alert', tag='h2', size='m') }}

                {{ components.alerts(text='The effect of your action could be disasterous, are you sure you want to continue?', type='warning')  }}

                {{ components.captionHeading(text='Monochrome info', tag='h2', size='m') }}

                {{ components.alerts(text='This is something you should be aware of before proceeding', type='mono')  }}


            {%- endcall %}

        {%- endcall %}
    </section>

{% endblock %}

