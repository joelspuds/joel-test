    {% call components.bulmaRow() %}

        {% call components.bulmaColumnAny(size='column is-full is-9-desktop is-9-widescreen') %}

            {{ components.captionHeading(text='Is the gender you identify with the same as your sex registered at birth?', caption='Equality, Diversity and inclusion (EDI) Information') }}

        {%- endcall %}

    {%- endcall %}

    <section class="section" id="main-content">

        {% call components.form(action='#', method='POST',name='ediForm') %}

        {% call components.bulmaRow() %}

            {% call components.bulmaColumnAny(size='column is-8') %}

                <details class="govuk-details u-space-t20 js-only" data-module="govuk-details" role="group">
                    <summary class="govuk-details__summary" role="button" aria-controls="details-content-0" aria-expanded="false">
                        <span class="govuk-details__summary-text">Guidance for answering this question</span>
                    </summary>
                    <div class="govuk-details__text" id="details-content-0" aria-hidden="true">
                        <p class="govuk-body">It's up to you how you answer this question.</p>
                        <p class="govuk-body">
                            <strong>Select "Yes" if:</strong>
                            <ul class="govuk-list govuk-list--bullet">
                                <li>you identify as female and your sex registered at birth was female</li>
                                <li>you identify as male and your sex registered at birth was male</li>
                            </ul>
                        </p>
                        <p class="govuk-body">
                            <strong>Select "No" if:</strong>
                            <ul class="govuk-list govuk-list--bullet">
                                <li>your gender identity is different from the sex recorded on your birth certificate when you were born, for example if you're transgender or non-binary</li>
                            </ul>
                        <br>

                            If you answered “No”, please enter the term you use to describe your gender.
                        </p>
                        <p class="govuk-body">This is also voluntary, so you can leave it blank if you prefer.</p>
                    </div>
                </details>

                <div class="govuk-form-group">
                    <fieldset class="govuk-fieldset">
                        <legend class="govuk-visually-hidden">Select your gender</legend>
                        <div class="govuk-radios govuk-radios--conditional" data-module="govuk-radios">
                            <div class="govuk-radios__item">
                                <input class="govuk-radios__input" id="gender1" name="gender" type="radio" value="Female">
                                <label class="govuk-label govuk-radios__label" for="gender1">Yes</label>
                            </div>

                            <div class="govuk-radios__item">
                                <input class="govuk-radios__input" id="gender2" name="gender" type="radio" value="Any other religion" data-aria-controls="conditional-other">
                                <label class="govuk-label govuk-radios__label" for="gender2">No</label>
                            </div>
                            <div class="govuk-radios__conditional govuk-radios__conditional--hidden" id="conditional-other">
                                <div class="govuk-form-group">
                                    <label class="govuk-label" for="other-gender-input">Enter the term you use to describe your gender.</label>
                                    <div class="govuk-hint govuk-radios__hint" style="padding-left:0;">This is also voluntary, so you can leave it blank if you prefer.</div>
                                    <input class="govuk-input govuk-!-width-one-third" id="other-gender-input" name="other-gender-input" type="text" spellcheck="false"></div>

                            </div>

                            <div class="govuk-radios__divider">or</div>
                            <div class="govuk-radios__item">
                                <input class="govuk-radios__input" id="gender3" name="gender" type="radio" value="Prefer not to say">
                                <label class="govuk-label govuk-radios__label" for="gender3">Prefer not to say</label>
                            </div>
                        </div>

                    </fieldset>
                </div>

                {#<details class="govuk-details u-space-t20 js-only" data-module="govuk-details" role="group">
