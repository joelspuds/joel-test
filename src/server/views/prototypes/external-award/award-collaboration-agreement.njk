
{% set showExternalNav = true %}
{% set activeNavItem = 'awards' %}
{% set navArea = 'home' %}
{% set applicationsLink = '#' %}
{% set homeLink = '/prototypes/post-decision/home' %}
{% set awardsLink = '/prototypes/post-decision/awards' %}
{% set reviewsLink = '#' %}
{% set hideAccountLinks = 'true' %}
{% set altProfilePagelink = '#' %}

{% set pageTitle = 'Collaboration agreement' %}

{% extends 'layouts/bulma-ufs.layout.njk' %}

{% set allData = allData if allData %}
{% set externalAwardPrototypeData = externalAwardPrototypeData if externalAwardPrototypeData %}
{% set userName = externalAwardPrototypeData.userName %}

{% set isAdminUser = false %}
{%  set loggedOut = false %}

{% set pageTitle = 'Awards ' + GLOBAL_TAG_TITLE_SUFFIX %}
{% set backLinkContents =  [{url:'/prototypes/external-award/set-up', text:'Back to award set-up overview'}] %}

{% set inviteResponse = inviteResponse if inviteResponse %}

{% block content %}

    {% call components.bulmaRow() %}
        {% call components.bulmaColumnAny(size='is-two-thirds') %}
            {{ components.captionHeading(text='Collaboration agreement', caption=externalAwardPrototypeData.awardName) }}
        {%- endcall %}
    {%- endcall %}

    {% call components.form(action='#', method='POST',name='startConfirmation') %}


        {% call components.bulmaRow() %}
            {% call components.bulmaColumnAny(size='is-9') %}

                <p class="govuk-body">The collaboration agreement covers how the consortium will work together on the project and exploit its results. It must be signed by all partners.</p>

                <p class="govuk-body">Guidance on completing a collaboration agreement can be found on the <a href="#" class="govuk-link">Lambert Agreement website</a>.</p>

                <p class="govuk-body">Your collaboration agreement must be:</p>
                <ul class="govuk-list govuk-list--bullet">
                    <li>a PDF (<a href="https://www.adobe.com/acrobat/about-adobe-pdf.html" class="govuk-link">Portable Document Format</a>)</li>
                    <li>legible at 100% magnification</li>
                    <li>less than 10MB in file size.</li>
                </ul>

            {%- endcall %}
        {%- endcall %}

        {% call components.bulmaRow() %}
        {% call components.bulmaColumnAny(size='is-6') %}

            <div class="file-upload">
                <h2 class="govuk-visually-hidden ">File upload</h2>
                <div class="files">
                    <div class="files__item">
                        <div class="govuk-form-group u-space-b0">
                            <div class="">
                                <label class="govuk-label" for="fileUpload4">Upload a file</label>
                                <input class="govuk-file-upload" id="fileUpload4" name="fileUpload4" type="file">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        {%- endcall %}
    {%- endcall %}

        {% call components.bulmaRow() %}

            {% call components.bulmaColumnAny(size='is-full') %}

                {% call components.formGroup() %}
                    <div class="application-item">
                        <div class="application-item__contents application-item__contents--mac">
                            <fieldset class="govuk-fieldset" aria-describedby="markAsComplete">
                                <legend class="govuk-fieldset__legend govuk-visually-hidden">
                                    <h3 class="govuk-fieldset__heading" id="">Mark as complete</h3>
                                </legend>
                                <div class="govuk-checkboxes">
                                    <div class="govuk-checkboxes__item">
                                        <input class="govuk-checkboxes__input" id="markAsComplete" name="isComplete" type="checkbox" {% if allData.collabAgreement == 'on' %}checked{% endif %}>
                                        <label class="govuk-label govuk-checkboxes__label" for="markAsComplete">Mark as complete</label>
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                    </div>
                {%- endcall %}
            {%- endcall %}
        {%- endcall %}

        {% call components.bulmaRow() %}
            {% call components.bulmaColumnAny(size='is-full') %}
                {% call components.formGroup() %}
                    <div class="application-controls govuk-clearfix">
                        {{ components.button(text='Save and return', extraClass="application-controls__submit")}}
                    </div>
                {%- endcall %}
            {%- endcall %}
        {%- endcall %}

    {%- endcall %} {# end form #}

    {% call components.bulmaRow() %}
        {% call components.bulmaColumnAny(size='is-full') %}
            <p class="govuk-body u-space-t30">
                <a href="/prototypes/external-award/set-up" class="govuk-link">Return to award set-up overview</a>
            </p>
        {%- endcall %}
    {%- endcall %}

    {% include '../../layouts/partials/user-contact.njk' %}

{% endblock %}
{% block bodyScripts %}

{% endblock %}

