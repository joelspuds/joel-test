{% set showExternalNav = true %}
{% set activeNavItem = 'awards' %}
{% set navArea = 'personal' %}
{% set applicationsLink = '#' %}
{% set homeLink = '#' %}
{% set reviewsLink = '#' %}
{% set accountSettingsLink = '' %}
{% set showExternalFurniture = false %}
{% set hideAccountLinks = true %}
{% extends 'layouts/bulma-ufs.layout.njk' %}
{% set isAdminUser = false %}
{% set loggedOut = false %}

{% set allData = allData if allData %}
{% set externalAwardPrototypeData = externalAwardPrototypeData if externalAwardPrototypeData %}
{% set userName = externalAwardPrototypeData.userName %}

{% set pageTitle = 'Award overview' + GLOBAL_TAG_TITLE_SUFFIX %}
{% set backLinkContents =  [{url:'#', text:'Back to awards'}] %}

{% block content %}

    {% call components.bulmaRow() %}
        {% call components.bulmaColumnAny(size='is-full') %}
            <div class="govuk-notification-banner govuk-notification-banner--success" role="region" aria-labelledby="govuk-notification-banner-title" data-module="govuk-notification-banner">
                <div class="govuk-notification-banner__header">
                    <h2 class="govuk-notification-banner__title" id="govuk-notification-banner-title">Success</h2>
                </div>
                <div class="govuk-notification-banner__content">
                    <p class="govuk-notification-banner__heading">Award offer accepted</p>
                    <p class="govuk-body">By {{ externalAwardPrototypeData.userName }} on behalf University of Wales on {{ 'dataAndTime' | dateAndTime() }}</p>
                </div>
            </div>
        {%- endcall %}
    {%- endcall %}

    {% call components.bulmaRow() %}
        {% call components.bulmaColumnAny(size='is-two-thirds') %}
            {{ components.captionHeading(text='Award overview', caption=externalAwardPrototypeData.awardName) }}
        {%- endcall %}
    {%- endcall %}

    {% call components.bulmaRow(extraClass='u-space-b45') %}
        {% call components.bulmaColumnAny(size='is-3') %}
            <p class="govuk-body u-space-y10">
                <strong>Status: </strong> Active
            </p>
            <p class="govuk-body u-space-y10">
                <strong>Award holder: </strong> Dr. Alicia Brook
            </p>
            <p class="govuk-body u-space-y10">
                <strong>Funder: </strong> BBSRC
            </p>
        {%- endcall %}
        {% call components.bulmaColumnAny(size='is-4') %}
            <p class="govuk-body u-space-y10">
                <strong>Start date:</strong> October to November 2022
            </p>
            <p class="govuk-body u-space-y10">
                <strong>End date:</strong> {{ externalAwardPrototypeData.currentEndDate }}
            </p>
            <p class="govuk-body u-space-y10">
                <strong>Award value:</strong> £1,000,000
            </p>
        {%- endcall %}
    {%- endcall %}

    {% call components.bulmaRow(extraClass='u-space-b45') %}
        {% call components.bulmaColumnAny(size='is-7') %}

            <div class="govuk-inset-text">
                <p class="govuk-body">
                    You must notify us though the Funding Service within 42 days of the date your project started.
                </p>

                <p class="govuk-body">
                    The latest you can start your project is 30 November 2022 (90 days remaining). Your funding award could end if you do notify us of that your project has started by this date.
                </p>

                <p class="govuk-body">
                    <a href="#" class="govuk-button u-space-b0" >Start award</a>
                </p>

            </div>

        {%- endcall %}
    {%- endcall %}

    {% call components.bulmaRow() %}
        {% call components.bulmaColumnAny(size='is-7') %}

            {{ components.captionHeading(text='Award information', size='m', tag='h2') }}

            <div class="application-items u-space-b45">

                <div class="application-item  application-item--skinny">
                    <div class="application-item__contents govuk-clearfix">
                        <div class="application-item__left">
                            <a href="#" class="govuk-link">Award details</a>
                        </div>
                    </div>
                </div>

                <div class="application-item  application-item--skinny">
                    <div class="application-item__contents govuk-clearfix">
                        <div class="application-item__left">
                            <a href="#" class="govuk-link">Team</a>
                        </div>
                    </div>
                </div>

                <div class="application-item  application-item--skinny">
                    <div class="application-item__contents govuk-clearfix">
                        <div class="application-item__left">
                            <a href="#" class="govuk-link">Award agreement</a>
                        </div>
                    </div>
                </div>

                <div class="application-item application-item--skinny">
                    <div class="application-item__contents govuk-clearfix">
                        <div class="application-item__left">
                            <a href="#" class="govuk-link">Supporting documents</a>
                        </div>
                    </div>
                </div>

                <div class="application-item  application-item--skinny">
                    <div class="application-item__contents govuk-clearfix">
                        <div class="application-item__left">
                            <a href="#" class="govuk-link">Costs</a>
                        </div>
                    </div>
                </div>

                <div class="application-item  application-item--skinny">
                    <div class="application-item__contents govuk-clearfix">
                        <div class="application-item__left">
                            <a href="#" class="govuk-link">Payment schedule</a>
                        </div>
                    </div>
                </div>
            </div>

            {{ components.captionHeading(text='Manage award', size='m', tag='h2') }}

            <div class="application-items u-space-b45">

                <div class="application-item  application-item--skinny">
                    <div class="application-item__contents govuk-clearfix">
                        <div class="application-item__left">
                            <a href="#" class="govuk-link">Expenditure statements</a>
                        </div>
                    </div>
                </div>

                <div class="application-item  application-item--skinny ">
                    <div class="application-item__contents govuk-clearfix u-pad-r0">
                        <div class="application-item__left">
                            <a href="#" class="govuk-link">Change requests</a>
                        </div>
                        <div class="application-item__right u-align-right">

                        </div>

                    </div>
                </div>

            </div>

        {%- endcall %}

        {% call components.bulmaColumnAny(size='is-4 is-offset-1') %}

            {#{{ components.list(items=listItemsActions, type='bullet')}}#}

            <div class="govuk-related-items govuk-related-items--flush u-space-t15">

                <div class="application-data application-data--large u-space-t10">
                    <dl class="application-data__list">
                        <dt class="application-data__key"><strong>Application:</strong></dt>
                        <dd class="application-data__value"><a href="#" class="govuk-link">APP101660: The economics of grant funding in a post-pandemic world (opens in new window)</a> </dd>
                        <dt class="application-data__key"><strong>Opportunity:</strong></dt>
                        <dd class="application-data__value">OPP991: Post pandemic fiscal innovation</dd>
                        {#<dt class="application-data__key"><strong>Applicant:</strong></dt>
                        <dd class="application-data__value">Dr. Alicia Brook#}{#{{ 'addHonorific' | giveMeAName }}#}{#</dd>
                        <dt class="application-data__key"><strong>Email address:</strong></dt>
                        <dd class="application-data__value">a.brook@wales.ac.uk</dd>
                        <dt class="application-data__key"><strong>Organisations:</strong></dt>
                        <dd class="application-data__value">
                            University of Wales<br>
                            Manchester University
                        </dd>
                        <dt class="application-data__key"><strong>Award amount:</strong></dt>
                        <dd class="application-data__value">£1,200,000</dd>#}
                    </dl>
                </div>
            </div>

        {%- endcall %}

    {%- endcall %}



    {% include '../../layouts/partials/user-contact.njk' %}

{% endblock %}
{% block bodyScripts %}
{% endblock %}

