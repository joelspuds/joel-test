
{% set showExternalNav = true %}
{% set activeNavItem = 'awards' %}
{% set navArea = 'home' %}
{% set applicationsLink = '#' %}
{% set homeLink = '/prototypes/post-decision/home' %}
{% set awardsLink = '/prototypes/post-decision/awards' %}
{% set reviewsLink = '#' %}
{% set hideAccountLinks = 'true' %}
{% set altProfilePagelink = '#' %}

{% extends 'layouts/bulma-ufs.layout.njk' %}

{% set allData = allData if allData %}
{% set externalAwardPrototypeData = externalAwardPrototypeData if externalAwardPrototypeData %}
{% set userName = externalAwardPrototypeData.userName %}

{% set isAdminUser = false %}
{%  set loggedOut = false %}

{% set pageTitle = 'Awards ' + GLOBAL_TAG_TITLE_SUFFIX %}
{% set backLinkContents =  [{url:'/prototypes/external-award/set-up', text:'Back to award set-up overview'}] %}

{% set inviteResponse = inviteResponse if inviteResponse %}

{% block content %}

    {% call components.form(action='#', method='POST',name='submitForm') %}

    {% call components.bulmaRow() %}
        {% call components.bulmaColumnAny(size='is-two-thirds') %}
            {{ components.captionHeading(text='Award agreement', caption=externalAwardPrototypeData.awardName) }}
        {%- endcall %}
    {%- endcall %}

    {% call components.bulmaRow(extraClass='u-space-y0') %}
        {% call components.bulmaColumnAny(size='is-two-thirds') %}

            <p class="govuk-body  "><strong class="">THIS AGREEMENT</strong> is dated DD/MM/YYYY and is made between: (1) Biotechnology and Biological Sciences Research Council,
                part of UK Research and Innovation (“BBSRC, UKRI”); (2) University of Wales; and (3) University of Manchester
            <p class="govuk-body  ">
            <strong class="meta">IN WITNESS WHEREOF</strong>, the parties have duly executed this Agreement the day and year last set forth below.</p>
        {%- endcall %}
    {%- endcall %}

    {% call components.bulmaRow(extraClass='u-space-y0') %}
        {% call components.bulmaColumnAny(size='is-4') %}
            {{ components.captionHeading(text='For and on behalf of BBSRC', size='xs ', tag='h3') }}
            <p class="govuk-body  ">
                Arden Pimenta,<br>
                BBSRC, UKRI
            </p>
            {#<p class="govuk-body meta ">on DD Month YYYY.</p>#}
        {%- endcall %}
        {% call components.bulmaColumnAny(size='is-4') %}
            {{ components.captionHeading(text='For and on behalf of University of Wales', size='xs ', tag='h3') }}
            <p class="govuk-body  ">
                Dr. Alicia Brook
            </p>
            {#<p class="govuk-body  ">on DD Month YYYY.</p>#}
        {%- endcall %}
        {% call components.bulmaColumnAny(size='is-4') %}
            {{ components.captionHeading(text='For and on behalf of University of Manchester', size='xs ', tag='h3') }}
            <p class="govuk-body meta ">
                Dr. Annabel Hatt
            </p>
            {#<p class="govuk-body meta ">on DD Month YYYY.</p>#}
        {%- endcall %}
    {%- endcall %}

    {% call components.bulmaRow() %}
        {% call components.bulmaColumnAny(size='is-8') %}

            {{ components.captionHeading(text='Details', size='m', tag='h2') }}

            <table class="govuk-table u-space-b45">
                <tbody>
                    <tr>
                        <th class="govuk-table__header">Award name</th>
                        <td class="govuk-table__cell">AWA184 - Environmental research grants 2022</td>
                    </tr>
                    <tr>
                        <th class="govuk-table__header">Start date</th>
                        <td class="govuk-table__cell">21 November 2022</td>
                    </tr>
                    <tr>
                        <th class="govuk-table__header">Duration in months</th>
                        <td class="govuk-table__cell">24</td>
                    </tr>
                </tbody>

            </table>


            {{ components.captionHeading(text='Costs', size='m', tag='h2') }}



            <table class="govuk-table govuk-table--stripes">
                <thead>
                <tr>
                    <th class="govuk-table__header">Category</th>
                    <th class="govuk-table__header govuk-table__header--numeric">Full Economic Cost (£)</th>
                    <th class="govuk-table__header govuk-table__header--numeric">RC Contribution (£)</th>
                    <th class="govuk-table__header govuk-table__header--numeric">FEC (%)</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td class="govuk-table__cell">Directly incurred</td>
                    <td class="govuk-table__cell govuk-table__cell--numeric">300,208.40</td>
                    <td class="govuk-table__cell govuk-table__cell--numeric">240,166.72</td>
                    <td class="govuk-table__cell govuk-table__cell--numeric">80</td>
                </tr>
                <tr>
                    <td class="govuk-table__cell">Directly allocated</td>
                    <td class="govuk-table__cell govuk-table__cell--numeric">75,285.55</td>
                    <td class="govuk-table__cell govuk-table__cell--numeric">60,228.44</td>
                    <td class="govuk-table__cell govuk-table__cell--numeric">80</td>
                </tr>
                <tr>
                    <td class="govuk-table__cell">Indirect costs</td>
                    <td class="govuk-table__cell govuk-table__cell--numeric">220,987.65</td>
                    <td class="govuk-table__cell govuk-table__cell--numeric">176,790.12</td>
                    <td class="govuk-table__cell govuk-table__cell--numeric">80</td>
                </tr>
                <tr>
                    <td class="govuk-table__cell">Exceptions</td>
                    <td class="govuk-table__cell govuk-table__cell--numeric">0</td>
                    <td class="govuk-table__cell govuk-table__cell--numeric">0</td>
                    <td class="govuk-table__cell govuk-table__cell--numeric">100</td>
                </tr>
                <tr class="">
                    <td class="govuk-table__cell govuk-table__cell--mega"><strong>Totals:</strong></td>
                    <td class="govuk-table__cell govuk-table__cell--mega govuk-table__cell--numeric">596,481.60</td>
                    <td class="govuk-table__cell govuk-table__cell--mega govuk-table__cell--numeric">477,185.28</td>
                    <td class="govuk-table__cell govuk-table__cell--mega govuk-table__cell--numeric">&nbsp;</td>
                </tr>
                </tbody>
            </table>


            {{ components.captionHeading(text='Terms and conditions', size='m', tag='h2') }}

            {% include '../../layouts/partials/terms-and-conditions-awards.njk' %}

        {%- endcall %}


    {%- endcall %}

    {% call components.bulmaRow() %}

        {% call components.bulmaColumnAny(size='is-full') %}

            {% call components.formGroup() %}
                <div class="application-item">
                    <div class="application-item__contents application-item__contents--mac">
                        <fieldset class="govuk-fieldset" aria-describedby="markAsComplete">
                            <legend class="govuk-fieldset__legend govuk-visually-hidden">
                                <h3 class="govuk-fieldset__heading" id="">Mark as complete</h3>
                            </legend>
                            <div class="govuk-checkboxes">
                                <div class="govuk-checkboxes__item">
                                    <input class="govuk-checkboxes__input" id="markAsComplete" name="isComplete" type="checkbox" {% if allData.awardAgreement == 'on' %}checked{% endif %}>
                                    <label class="govuk-label govuk-checkboxes__label" for="markAsComplete">Mark as complete</label>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>
            {%- endcall %}
        {%- endcall %}
    {%- endcall %}

    {% call components.bulmaRow() %}
        {% call components.bulmaColumnAny(size='is-full') %}
            {% call components.formGroup() %}
                <div class="application-controls govuk-clearfix">
                    {{ components.button(text='Save and return', extraClass="application-controls__submit")}}
                </div>
            {%- endcall %}
        {%- endcall %}
    {%- endcall %}

    {%- endcall %} {# end form #}

    {% include '../../layouts/partials/user-contact.njk' %}

{% endblock %}
{% block bodyScripts %}

{% endblock %}

