{% extends 'layouts/mts-without-container.layout.njk' %}
 {% set pageTitle = 'homepage' %}
 {% set pageBreadcrumbItems = [
  { text: 'Home', url: '/prototypes' },
  { text: 'MOT test results', url: '/prototypes/mot-test' },
  { text: 'Brake test' }
] %}
 {% block content %}
 <main id="content">
     <a href="/prototypes/recalls/Component-version/start-page" class="link-back">Back</a> 
     <header class="content-header">
        <h1 class="heading-large heading heading--page-heading heading--small-margin-bottom">
                What type of recall are you checking?</h1>
    </header>                       
     <div class="row contents">
        <div class="col-lg-12">
     <div class="grid-row">
    <div class="column-three-quarters">
        <form action="/prototypes/recalls/Component-version/component-make">
            <div class="form-group">
                <fieldset>
                 <div class="multiple-choice">
                    
                    <input id="recalls-vehicle" type="radio" name="radio-recalls-group" value="vehicle">
                    <label for="recalls-vehicle">A vehicle</label>
                </div>
                <div class="multiple-choice">
                    <input id="recalls-other" type="radio" name="radio-recalls-group" value="other">
                    <label for="recalls-other">Other recalled equipment<span class="form-hint">For example, tyres or child seats</span></label>
                </div>
                </fieldset>
            </div>
          <input class="button" type="submit" value="Continue">
        </form>
        <br>

        <h3 class="heading-medium">Download recall information</h3>
        <div class="notice">
            <i class="icon icon-file-download"><span class="visually-hidden">Download All recalls since 1992</span></i>
            <p><a href="#"><strong>All recalls since 1992</strong> (CSV, 50kb)</a></p>
        </div>
        <div class="notice">
                <i class="icon icon-file-download"><span class="visually-hidden">Download All recalls since 1992</span></i>
                <p><a href="#"><strong>Recalls data guide </strong> (PDF, 85kb)</a></p>
        </div>

    </div>
</div>  
           
 </main>
 {% endblock %} 
