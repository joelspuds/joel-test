{% extends 'layouts/mts-without-container.layout.njk' %}

{% set pageTitle = 'MOT history - vehicle results' %}

{% block content %}


<main id="content" role="main">

  <div class="grid-row">
    <div class="column-full">
      <a class="link-back" href="history-results-audi">Back</a>
      <div class="error-summary" role="alert" aria-labelledby="error-summary-example-heading-one">
      <h2 class="heading-medium error-summary-heading" id="error-summary-example-heading-one">
        There was a problem
      </h2>

      <ul class="error-summary-list">
        <li>
          <a href="#v5c">
            Check that you entered the V5C number correctly
          </a>
        </li>
      </ul>
  </div>
    </div>
  </div>


  <div class="grid-row">
    <div class="column-one-half">

      <form class="form" action="enter-v5c" method="POST">
        
        <h1 class="form-title heading-large">
          Download your MOT test certifcate
        </h1>

        <p>
              To be able to view the MOT test certificate you need to enter your V5C number to show you own the car.
          </p>

        <div class="form-group form-group-error">
          <label class="form-label-bold" for="full-name">Enter V5C reference number</label>
          <span class="form-hint">For example, 13451067289</span>
          <span class="error-message">Check that you entered the V5C number correctly</span>
          <input type="text" value="{{ viewData.v5c }}" class="form-control" name="v5c" id="v5c" style="text-transform: uppercase;">
        </div>
       
        <div class="form-group">
          <button class="govuk-button" type="submit" role="button">Continue</button> 
        </div> 


      </form>

    </div>

    <div class="column-one-half">
      <div class="app-related-content govuk-!-margin-top-8">
        <h2 class="govuk-heading-s govuk-!-margin-top-3">Where to find the V5C?</h2>
        <img src="/images/V5C-diagram.png" class="image">
      </div>
    </div>

  </div>
</main>

{% endblock %}