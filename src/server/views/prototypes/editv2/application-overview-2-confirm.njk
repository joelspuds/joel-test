{% block content %}


    {% call components.bulmaRow() %}
        {% call components.bulmaColumnAny(size='is-two-thirds') %}
            {{ components.captionHeading(text='Are you sure you want to submit this application?', caption='APP420: ' + prototypeData.applicationTitle2) }}
        {%- endcall %}
    {%- endcall %}



    <section class="section" id="mainContent">



        {% call components.bulmaRow() %}

            {% call components.bulmaColumnAny(size='is-7', extraClass='u-space-t20') %}

                <div class="govuk-warning-text">
                    <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
                    <strong class="govuk-warning-text__text">
                        <span class="govuk-warning-text__assistive">Warning</span>
                        This application is currently being edited by Renata Minchin. The last saved version will be submitted to UKRI, so some recent changes may be lost.
                    </strong>
                </div>

            {%- endcall %}

        {%- endcall %}

        {% call components.bulmaRow() %}

            {% call components.bulmaColumnAny(size='is-7', extraClass='_u-space-t20') %}

                <div class="application-controls application-controls--paired-buttons govuk-clearfix _u-space-t45">

                    {% call components.form(action='#', method='POST',name='submitApplicationConfirm') %}

                        <a type="submit" class="govuk-button application-controls__submit" name="submitButton" value="submitToUKRI" href="/prototypes/editv2/application-overview-2-submitted">Submit application to UKRI</a>

                        <a href="/prototypes/editv2/application-overview-2" class="govuk-link application-controls__cancel u-space-x45" >Return to application overview</a>
                    {%- endcall %}
                </div>

            {%- endcall %}

        {%- endcall %}


    </section>


    {% include '../../layouts/partials/user-contact.njk' %}

