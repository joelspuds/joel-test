{% extends 'layouts/default.layout.njk' %}

{% set pageTitle = 'Prototypes Index' %}

{% set listItemsWIP = [
  { text: 'Molecules & layouts', url: '/prototypes/molecules' },
  { text: 'Resources and costs', url: '/prototypes/molecules/resources-and-costs' },
  { text: 'Resources and costs with error', url: '/prototypes/molecules/resources-and-costs-errors' },
  { text: 'Resources and costs with all erroring', url: '/prototypes/molecules/resources-and-costs-errorall' }
  ] %}

  {% set listItemsInternal = [
  { text: 'Create Opportunity v3', url: '/prototypes/opportunity-v3' },
  { text: 'Create Opportunity v3 (clear session)', url: '/prototypes/opportunity-v3?clearSession=true' },
    { text: 'Expert review', url: '/prototypes/peer-review' }
  ] %}

 {% set listItemsExternal = [
   { text: 'Application', url: '/prototypes/application-v2' },
   { text: 'Apply for opportunity as user', url: '/prototypes/example-journey/application/project-listings' },
   { text: 'Register/signin', url: '/prototypes/register-v1/' },
   { text: 'Applicant and Research Office - 2 player', url: '/prototypes/multi-users/' },
   { text: 'Peer review, internal journey', url: '/prototypes/peer-review/' },
   { text: 'Peer review, external journey', url: '/prototypes/peer-review-external/' },
   { text: 'External nav structure', url: '/prototypes/external-users/' },
   { text: 'Ethnicity, diversity and inclusion (EDI) journey', url: '/prototypes/edi' },
   { text: 'Submission control (Applicant and Research Office Part II)', url: '/prototypes/submission-control/' },
   { text: 'Ditto above - participant\'s sanitised start page' , url: '/prototypes/submission-control/index-participants' },
   { text: 'Team, resources and costs' , url: '/prototypes/team-resources-costs/' }
 ] %}
{% set listItemsGeneric = [
  { text: 'Dashboard', url: '/prototypes/application-v2' }
] %}

{% set listItemsStories = [
  { text: 'FSB-106', url: '/prototypes/stories/fsb-106' },
  { text: 'FSB-740', url: '/prototypes/stories/fsb-740' },
  { text: 'FSB-2730', url: '/prototypes/stories/fsb-2730' },
  { text: 'FSB-3036', url: '/prototypes/stories/fsb-3036' },
  { text: 'FSB-3124', url: '/prototypes/stories/fsb-3124-applicants' },
  { text: 'UFSPA-713: Timeline with modified details block and tags in H1', url: '/prototypes/change-request/change-request-detail-static' }

] %}

{% block _content %}

  {{ components.pageHeading('Prototypes', ' Front-End') }}

  {% call components.gridRow() %}

    {% call components.columnHalf() %}

      {{ components.heading(text='Work in progress', tag='h3', size='medium') }}

      {{ components.alerts(text='Some of these may be updated with the new GDS partials!', type='warning') }}

      {{ components.list(items=listItemsWIP, type='bullet')}}

    {%- endcall %}

    {% call components.columnHalf() %}

      {{ components.heading(text='Journeys', tag='h3', size='medium') }}

      {{ components.heading(text='Internal', tag='h4', size='small') }}

      {{ components.list(items=listItemsInternal, type='bullet')}}

      {{ components.heading(text='External', tag='h4', size='small') }}

      {{ components.list(items=listItemsExternal, type='bullet')}}

      {{ components.heading(text='Post decision', tag='h4', size='small') }}

      <ul class="govuk-list govuk-list--bullet">

        <li>
          <a href="/prototypes/post-decision" class="govuk-link govuk-link--no-visited-state ">Start award</a>
        </li>

        <li>
          <a href="/prototypes/start-award" class="govuk-link govuk-link--no-visited-state ">Start award, v2 static pages</a>
          <br>
           - <a href="/prototypes/start-award/award-agreement" class="govuk-link govuk-link--no-visited-state ">Award agreement</a>
        </li>

        <li>
          <a href="/prototypes/change-request" class="govuk-link govuk-link--no-visited-state ">Change request</a>
        </li>

        <li>
          <a href="/prototypes/external-award" class="govuk-link govuk-link--no-visited-state ">Accept award</a>
        </li>

      </ul>

      {{ components.heading(text='Generic', tag='h4', size='small') }}

      {{ components.list(items=listItemsGeneric, type='bullet')}}

    {%- endcall %}

  {%- endcall %}

  {% call components.gridRow() %}

    {% call components.columnFull() %}

      {{ components.heading(text='Stories', tag='h3', size='medium') }}

      {{ components.list(items=listItemsStories, type='bullet')}}

    {%- endcall %}

  {%- endcall %}

{% endblock %}
