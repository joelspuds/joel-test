{% extends 'layouts/bulma-ufs.layout.njk' %}

{% set pageTitle = 'Thanks ' + GLOBAL_TAG_TITLE_SUFFIX %}
{% set backLinkContents =  [{url:'#', text:'Back to reviews'}] %}

{% set inviteResponse = inviteResponse if inviteResponse %}

{% block content %}

    {% call components.bulmaRow() %}
        {% call components.bulmaColumnAny(size='is-two-thirds') %}
            {{ components.captionHeading(text='Thank you for your response', caption='Bio-detoxification of Ricin in castor bean') }}
        {%- endcall %}
    {%- endcall %}

    {% call components.bulmaRow() %}

        {% call components.bulmaColumnAny(size='is-7', extraClass='') %}

            {% if inviteResponse == 'accept' %}

                {{ components.captionHeading(text='What happens next', tag='h2', size='m') }}

                <p class="govuk-body">
                    You need to sign in or create an account to view the application and submit your review by 14 May 2021.
                </p>

                <p class="govuk-body">
                    <a href="/prototypes/register-v1/start" class="govuk-button">Continue</a>
                </p>

            {% endif %}

            {% if inviteResponse == 'extend' %}

                {{ components.captionHeading(text='What happens next', tag='h2', size='m') }}

                <p class="govuk-body">
                    Your extension request has been submitted, a member of URKI may be in touch to discuss further.
                </p>

                {{ components.captionHeading(text='Notification', tag='h2', size='m') }}

                <p class="govuk-body">
                    You will be informed of the extension decision by email.
                </p>

            {% endif %}

        {%- endcall %}

    {%- endcall %}

{% endblock %}
{% block bodyScripts %}

{% endblock %}

