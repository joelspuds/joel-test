{% set loggedOut = true %}
{% set isAdminUser = false %}
{% set showExternalNav = true %}
{% set signInLink = '#' %}

{% extends 'layouts/bulma-ufs.layout.njk' %}

{% set pageTitle = 'Thanks ' + GLOBAL_TAG_TITLE_SUFFIX %}
{#{% set backLinkContents =  [{url:'#', text:'Back to reviews'}] %}#}

{% set titleText = 'Thank you' %}

{% if inviteResponse == 'extend' %}
    {% set titleText = 'Your extension has been requested' %}
{% endif %}



{% set inviteResponse = inviteResponse if inviteResponse %}

{% block content %}

    {% call components.bulmaRow() %}
        {% call components.bulmaColumnAny(size='is-two-thirds') %}
            {{ components.captionHeading(text=titleText, caption='Bio-detoxification of Ricin in castor bean') }}
        {%- endcall %}
    {%- endcall %}

    {% call components.bulmaRow() %}

        {% call components.bulmaColumnAny(size='is-7', extraClass='') %}

            {% if inviteResponse == 'accept' %}

                {{ components.captionHeading(text='What happens next', tag='h2', size='m') }}

                <p class="govuk-body">
                   {# You will receive an email notifying you when the application is available.#} To review it, you will need to <a href="/prototypes/register-v1/start?applicantReviews=true">sign in to the UKRI Funding Service</a> or create a new account.</p>

                {{ components.captionHeading(text='Deadline', tag='h2', size='m') }}

                <p class="govuk-body">
                    You must submit your review by 14 May 2021
                </p>

                {#<p class="govuk-body">
                    <a href="/prototypes/register-v1/start" class="govuk-button">Continue</a>
                </p>#}

            {% endif %}

            {% if inviteResponse == 'extend' %}

                {{ components.captionHeading(text='What happens next', tag='h2', size='m') }}

                <p class="govuk-body">
                    We will inform you of our decision by email and may contact you to discuss this.
                </p>


               {# {{ components.captionHeading(text='Notification', tag='h2', size='m') }}

                <p class="govuk-body">
                    You will be informed of the extension decision by email.
                </p>#}

            {% endif %}


            {% if inviteResponse == 'reject' %}

                {{ components.captionHeading(text='What happens next', tag='h2', size='m') }}

                <p class="govuk-body">
                    You do not need to do anything. We value your continued support and look forward to
                    inviting you to review future applications.
                </p>

            {% endif %}

            <p class="govuk-body u-space-t45">
                <a href="#" class="govuk-link">Tell us what you think of this service</a> â€“ takes 2 minutes.
            </p>

        {%- endcall %}

    {%- endcall %}

    <p class="prototype-button-wrapper" style="">
        <a href="/prototypes/peer-review-external" class="prototype-button" style="">Return to prototype home</a>
    </p>

{% endblock %}
{% block bodyScripts %}

{% endblock %}

