{% set loggedOut = true %}
{% set isAdminUser = false %}
{% set showExternalNav = true %}
{% set signInLink = '#' %}

{% extends 'layouts/bulma-ufs.layout.njk' %}

{% set pageTitle = 'Decline invitation to review  ' + GLOBAL_TAG_TITLE_SUFFIX %}
{% set backLinkContents =  [{url:'/prototypes/peer-review-external/respond-to-invite', text:'Back to all responses'}] %}

{% block content %}

    {% call components.bulmaRow() %}
        {% call components.bulmaColumnAny(size='is-two-thirds') %}
            {{ components.captionHeading(text='Why are you unable to review this application?', caption='Bio-detoxification of Ricin in castor bean') }}
        {%- endcall %}
    {%- endcall %}

    {% call components.bulmaRow() %}

        {% call components.bulmaColumnAny(size='is-7', extraClass='') %}

            {% call components.form(action='#', method='POST',name='confirmRejectInvite') %}

                <div class="govuk-form-group">
                    <fieldset class="govuk-fieldset" aria-describedby="contact-hint">
                        <legend class="govuk-fieldset__legend govuk-fieldset__legend--m govuk-visually-hidden">
                            <h2 class="govuk-fieldset__heading ">
                                I cannot review this application because:
                            </h2>
                        </legend>

                        <div class="govuk-radios govuk-radios--conditional" data-module="govuk-radios">
                            <div class="govuk-radios__item">
                                <input class="govuk-radios__input" id="busy" name="rejectReason" type="radio" value="busy">
                                <label class="govuk-label govuk-radios__label" for="busy">I'm too busy</label>
                            </div>
                            <div class="govuk-radios__item">
                                <input class="govuk-radios__input" id="expertise" name="rejectReason" type="radio" value="expertise">
                                <label class="govuk-label govuk-radios__label" for="expertise">It's outside my area of expertise</label>
                            </div>
                            <div class="govuk-radios__item">
                                <input class="govuk-radios__input" id="conflict" name="rejectReason" type="radio" value="conflict">
                                <label class="govuk-label govuk-radios__label" for="conflict">There’s a conflict of interest</label>
                                <div class="govuk-hint govuk-radios__hint govuk-!-font-size-16">
                                    <a href="#" class="govuk-link">View guidance on conflicts of interest (opens in a new window).</a>
                                </div>
                            </div>

                            <div class="govuk-radios__item">
                                <input class="govuk-radios__input" id="other" name="rejectReason" type="radio" value="other" data-aria-controls="conditional-3">
                                <label class="govuk-label govuk-radios__label" for="other">Other</label>
                            </div>
                            <div class="govuk-radios__conditional govuk-radios__conditional--hidden" id="conditional-3">
                                <div class="govuk-form-group">
                                    <label class="govuk-label" for="otherSpecify">Enter the reason (optional)</label>
                                    <span class="govuk-hint">Do not include any personal or financial information.</span>
                                    <input class="govuk-input " id="otherSpecify" name="otherSpecify" type="text">
                                </div>
                            </div>
                        </div>

                    </fieldset>
                </div>

                {{ components.captionHeading(text='Suggest an alternative reviewer (optional)', size='m', tag='h2') }}

                <div class="govuk-form-group">
                    <label class="govuk-label" for="altName">Enter name</label>
                    <input class="govuk-input govuk-input--width-20" id="altName" name="altName" type="text">
                </div>

                <div class="govuk-form-group">
                    <label class="govuk-label" for="altEmail">Enter email address</label>
                    <input class="govuk-input govuk-input--width-20" id="altEmail" name="altEmail" type="text">
                </div>

                <div class="govuk-character-count" data-module="govuk-character-count" data-maxlength="200">
                    <div class="govuk-form-group">
                        <label class="govuk-label" for="more-detail">Tell us why you're suggesting this reviewer</label>
                        <div id="more-detail-hint" class="govuk-hint">Do not include any personal or financial information.</div>
                        <textarea class="govuk-textarea govuk-input--width-20 govuk-js-character-count " id="more-detail" name="more-detail" rows="5" aria-describedby="more-detail-hint"></textarea>
                        <p class="govuk-body u-space-t10"><span id="wordCount" class="govuk-hint govuk-character-count__message" aria-live="polite">You have 500 characters remaining</span></p>
                    </div>
                </div>

                {% call components.formGroup() %}
                    <div class="application-controls govuk-clearfix">

                        {{ components.button(text='Continue', extraClass="application-controls__submit")}}

                    </div>
                {%- endcall %}

            {%- endcall %}
        {%- endcall %}

        {#{% call components.bulmaColumnAny(size='is-4 is-offset-1') %}

            <div class="govuk-related-items govuk-related-items--flush">
                <div class="application-data">
                    <dl class="application-data__list">
                        <dt class="application-data__key">Review deadline:</dt>
                        <dd class="application-data__value">Tuesday 14 May 2021</dd>

                        <dt class="application-data__key">Opportunity:</dt>
                        <dd class="application-data__value"><a href="#">Development of a Novel Inhibitor of Ricin</a></dd>

                        <dt class="application-data__key">Application title:</dt>
                        <dd class="application-data__value">Bio-detoxification of Ricin in castor bean</dd>

                        <dt class="application-data__key">Team:</dt>
                        <dd class="application-data__value">
                            Principal investigator: Prof Giles Dexter, Coventry University<br>
                            Co-investigator: Prof Gillian Demetriov Coventry University<br>
                            Researcher: Dr. Maximoma Turnipé Coventry University<br>
                        </dd>

                        <dt class="application-data__key">Grant size:</dt>
                        <dd class="application-data__value">£80,000</dd>

                        <dt class="application-data__key">Funder:</dt>
                        <dd class="application-data__value">UKRI</dd>
                    </dl>
                </div>
            </div>
        {%- endcall %}#}

    {%- endcall %}

{% endblock %}
{% block bodyScripts %}

{% endblock %}

