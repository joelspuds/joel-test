                </div>#}

                <input type="hidden" name="userName" value="Dr. Patricia Winslet">


                <div class="govuk-form-group ">
                    <fieldset class="govuk-fieldset">
                        <legend class="govuk-fieldset__legend govuk-fieldset__legend--s">
                            <h2 class="govuk-fieldset__heading">User role</h2>
                            <span  class="govuk-hint">Select your normal Panel role </span>
                        </legend>


                        <div class="govuk-radios">
                            <div class="govuk-radios__item">
                                <input class="govuk-radios__input" id="routeA" name="panelConfig" type="radio" value="chair">
                                <label class="govuk-label govuk-radios__label" for="routeA">Panel Chair</label>
                            </div>
                            <div class="govuk-radios__item">
                                <input class="govuk-radios__input" id="routeB" name="panelConfig" type="radio" value="normal">
                                <label class="govuk-label govuk-radios__label" for="routeB">Panel member (default if above left unselected)</label>
                            </div>
                        </div>
                    </fieldset>
                </div>

            {%- endcall %}

        {%- endcall %}

        {% call components.bulmaRow() %}

            {% call components.bulmaColumnAny(size='is-two-thirds') %}

                {% call components.formGroup() %}

                    {{ components.button(text='Continue', extraClass="application-controls__submit")}}

                {%- endcall %}

            {%- endcall %}

        {%- endcall %}

    {%- endcall %} {# end form #}

