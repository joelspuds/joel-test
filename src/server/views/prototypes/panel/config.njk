{% block content %}

    {% call components.bulmaRow() %}
        {% call components.bulmaColumnAny(size='is-full') %}
            {{ components.captionHeading(text='Journey configuration') }}
        {%- endcall %}
    {%- endcall %}

    {% call components.form(action='#', method='POST',name='panelConfig') %}

        {% call components.bulmaRow() %}

            {% call components.bulmaColumnAny(size='is-two-thirds') %}



                {#<div class="govuk-form-group ">
                    <label class="govuk-label govuk-!-font-weight-bold" for="userName">Personalisation (optional)</label>
                    <span class="govuk-hint">Enter your full name and include your honorific if you like, for example: Prof. Jane Moriarty</span>
