{% extends "layouts/mts.layout.njk" %}

{% block page_title %}
  Find MOT location
{% endblock %}


{% block content %}

<style>
li{
  margin: 15px 0;
}
</style>

<main id="content" role="main">
  <div class="grid-row">
    <div class="column-two-thirds">

      <a class="link-back" href="postcode-search">Back</a>

      <h1 class="govuk-heading-xl govuk-!-margin-top-8">
        Find a local MOT test centre
      </h1>
    </div>
   </div>

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-one-third">

        <form>
            <div class="form-group">
                <fieldset>
                    <legend for="location" class="govuk-heading-s govuk-!-margin-bottom-3 govuk-!-margin-top-3">
                        Postcode or Town
                    </legend>
                    <input id="location" name="location" class="form-control" style="width:100%;" type="text" placeholder="e.g. SW1A 2AA or Bakewell" value=" ">

                            <label class="form-label govuk-!-font-weight-bold govuk-!-margin-top-5" for="select-box">Distance</label>
                            <select class="form-control" style="width:100%; Margin-top: 10px" id="select-box" name="select-box">
                                <option>5 Miles</option>
                                <option>10 Miles</option>
                                <option>15 Miles</option>
                                <option>25 Miles</option>
                                <option>50 Miles</option>
                            </select>

                        <legend>
                            <span class="govuk-heading-s govuk-!-margin-bottom-3 govuk-!-margin-top-5">Filter results by vehicle type</span>
                            </legend>
                        <div class="multiple-choice">
                            <input id="vehicle-type-1" name="vehicle-types" type="checkbox" value="vehicle-small-engine-mototcycle">
                            <label for="vehicle-type-1">&lt; 200cc motorcycle</label>
                        </div>
                        <div class="multiple-choice">
                            <input id="vehicle-type-2" name="vehicle-types" type="checkbox" value="vehicle-mototcycle">
                            <label for="vehicle-type-2"> &gt; 200cc motorcycle</label>
                        </div>
                        <div class="multiple-choice">
                            <input id="vehicle-type-3" name="vehicle-types" type="checkbox" value="vehicle-three-wheel">
                            <label for="vehicle-type-3">3-wheeled vehicles</label>
                        </div>
                        <div class="multiple-choice">
                            <input id="vehicle-type-4" name="vehicle-types" type="checkbox" value="vehicle-car">
                            <label for="vehicle-type-4">Cars and vans</label>
                        </div>
                        <div class="multiple-choice">
                            <input id="vehicle-type-5" name="vehicle-types" type="checkbox" value="vehicle-passanger">
                            <label for="vehicle-type-5">Passenger vehicles</label>
                        </div>
                        <div class="multiple-choice">
                            <input id="vehicle-type-6" name="vehicle-types" type="checkbox" value="vehicle-goods-vehicle">
                            <label for="vehicle-type-6">Goods vehicles</label>
                        </div>

                    <a class="button button-filter-search" href="#" type="submit" style="margin-top: 15px;">Update search</a>
                </fieldset>
            </div>
                
        </form>

        <div class="app-related-content">
                <h2 class="govuk-!-font-weight-bold govuk-!-margin-top-4"> More information on the MOT test</h2>
                    <ul class="list list-bullet">
                        <li>
                            <a href="https://www.gov.uk/getting-an-mot">
                                When to get an MOT?
                            </a>
                        </li>
                        <li>
                            <a href="https://www.gov.uk/getting-an-mot/mot-test-fees">
                                Costs of an MOT test
                            </a>
                        </li>
                        <li>
                            <a href="https://www.gov.uk/getting-an-mot/booking-an-mot">
                                How to book an MOT test?
                            </a>
                        </li>
                    </ul>
        </div>
        

        <div class="app-related-content">
                <h2 class="govuk-!-font-weight-bold govuk-!-margin-top-4"> You can also</h2>
                    <ul class="list list-bullet">
                        <li>
                            <a href="https://www.gov.uk/check-mot-history">
                                Check your vehicle MOT history
                            </a>
                        </li>
                        <li>
                            <a href="https://www.gov.uk/check-vehicle-tax">
                                Check your vehicles tax status
                            </a>
                        </li>
                        <li>
                            <a href="https://www.gov.uk/mot-reminder">
                                Sign up for MOT reminders
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                Check vehicle safety recalls
                            </a>
                        </li>

                    </ul>
        </div>


        
    </div>

        <div class="govuk-grid-column-two-thirds">
            <div class="govuk-!-margin-bottom-2">
                <Strong class="govuk-!-font-weight-bold govuk-!-font-size-36" >22</strong>
                <span class="govuk-!-font-weight-bold">results</span>
                <a href="results-list" style="float: right; font-size: 19px; margin-top: 15px">View as list</a>
            </div>

            <hr class="govuk-section-break govuk-section-break--visible">

            <div class="govuk-!-margin-top-3">
                <div class="mapouter">
                    <div class="gmap_canvas">
                        <iframe width="630" height="700" id="gmap_canvas" src="https://maps.google.com/maps?q=nottingham&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
                            
                    </div>
                </div>
            </div>
        </div>
  </div>
</main>

{% endblock %}