{% extends 'layouts/library-mts.layout.njk' %}

{% set pageTitle = 'MOT Library - Summary Tables' %}

{% block content %}

  {{ components.heading(
    text='Notifications',
    tag='h2',
    size='medium'
  ) }}

  {% call components.displayCode() %}
  <div class="c-tab-list">
    <ul class="c-tab-list__tabs">
      <li>
        <span class="c-tab-list__tab-link c-tab-list__tab-link--active">Inbox (10)</span>
      </li>
      <li>
        <a href="/molecule/tablists/archived" class="c-tab-list__tab-link">Archive</a>
      </li>
    </ul>

    <ul class="c-tab-list__items">
      <li class="c-tab-list__row c-tab-list__row--header">
        <div class="c-tab-list__item-left">
          <strong>Title</strong>
        </div>

        <div class="c-tab-list__item-right">
          <strong>Date received</strong>
        </div>
      </li>

      <li class="c-tab-list__row c-tab-list__row--unread">
        <div class="c-tab-list__item-left">
          <a href="#" class="c-tab-list__item-link">You have been nominated for a role</a>
        </div>

        <div class="c-tab-list__item-right">
          <span class="">Today</span>
        </div>
      </li>

      <li class="c-tab-list__row c-tab-list__row--unread">
        <div class="c-tab-list__item-left">
          <a href="#" class="c-tab-list__item-link">Title of unread message</a>
        </div>

        <div class="c-tab-list__item-right">
          <span class="">4 Jan</span>
        </div>
      </li>

      <li class="c-tab-list__row">
        <div class="c-tab-list__item-left">
          <a href="#" class="c-tab-list__item-link">Title of a read message</a>
        </div>

        <div class="c-tab-list__item-right">
          <span class="">2 Jan</span>
        </div>
      </li>

      <li class="c-tab-list__row">
        <div class="c-tab-list__item-left">
          <a href="#" class="c-tab-list__item-link">Longer title of another read message</a>
        </div>

        <div class="c-tab-list__item-right">
          <span class="">19 Dec 2016</span>
        </div>
      </li>
    </ul>
  </div>
  {%- endcall %}

  
  {{ components.heading(
    text='No Messages',
    tag='h2',
    size='medium'
  ) }}

  {% call components.displayCode() %}
  <div class="c-tab-list">
    <ul class="c-tab-list__tabs">
      <li>
        <span class="c-tab-list__tab-link c-tab-list__tab-link--active">Inbox (0)</span>
      </li>
      <li>
        <a href="/molecule/tablists/archived" class="c-tab-list__tab-link">Archive</a>
      </li>
    </ul>

    <ul class="c-tab-list__items">
      <li class="c-tab-list__row c-tab-list__row--header">
        <div class="c-tab-list__item-left">
          <strong>Title</strong>
        </div>

        <div class="c-tab-list__item-right">
          <strong>Date received</strong>
        </div>
      </li>
    </ul>
    
    <p class="c-tab-list__no-new"> You don't have any new notifications</p>
  </div>
  {%- endcall %}

{% endblock %}